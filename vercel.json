{
  "version": 2,
  "builds": [
    {
      "src": "uniclub-backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/uniclub-backend/index.js"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "continue": true
    },
    {
      "src": "/Assets/(.*)",
      "dest": "/Assets/$1",
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/(?!api/).*",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/cron/news-curation",
      "schedule": "0 5 * * *"
    }
  ]
}

